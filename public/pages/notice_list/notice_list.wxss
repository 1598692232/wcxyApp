.notice-tips{
    height: 48px;
    background: #202330;
    line-height: 48px;
    text-align: center;
}
.notice-tips-text{
    font-size: 16px;
    color: #FFFFFF;
}
.empty-notice{
    font-size: 13px;
    color: #323546;
    text-align: center;
}
.empty-notice image{
    display:block;
    width:70px;
    height:75px;
    margin: 200px auto 14px;
}

.list-body{
    margin-bottom: 50px;
}
.refresh{
    text-align:center;
    line-height: 44px;
    font-size:14px;
    color: #838383;
    overflow: hidden;
}
.item{
    box-sizing: border-box;
    width: 100%;
    border-bottom: 2px solid #2F3344;
    display: flex;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
}
.item-left{
    width:46px;
    height: 46px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    /* background: #1166EA; */
    overflow: hidden;
    /* border:1px solid #fff; */
}
.item-left .image{
    width:46px;
    height: 46px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.item-left-title{
    width: 24px;
    height: 24px;
    font-size: 21px;
    color: #FFFFFF;
    overflow: hidden;
}
.item-left image{
    width: 46px;
    height: 46px;
}
.item-left.system-message image{
    width: 24px;
    height: 24px;
}
.item-right{
    margin-left: 8px;
    max-width: 200px;
}
.item-title{
    display: block;
    font-size:14px;
    line-height: 28px;
    color:#fff;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.item-comment{
    display: block;
    font-size: 12px;
    color: #9B9B9B;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.item-time-box{
    min-width: 40px;
    height: 16px;
    position: absolute;
    right: 20px;
    top: 30px;
}
.item-time{
    font-size: 11px;
    color: #9B9B9B;
    line-height: 16px;
    text-align: center;
}

.notice-del{
    width: 100%;
    height: 50px;
    background: #202330;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 66;
    line-height: 50px;
    text-align: center;
    font-size: 13px;
    color: #FFFFFF;
    border-top: 2px solid #2F3344;
}



  .item-left-content {
    width: 100%;
    padding: 15px 12px;
    display: flex;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    margin-left: -90px;
  }
  .del {
    background-color: #F84B30;
    width: 90px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
  }
  .touch-move-active .item-left-content,
  .touch-move-active .del {
    -webkit-transform: translateX(0);
    transform: translateX(0);
  }