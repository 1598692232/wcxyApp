
<view class="section tc" style="height: {{scrollHeightAll}}px">
  <video id="myVideo" class="info-video" src="{{url}}" enable-danmu controls objectFit="cover" autoplay bindtimeupdate="getVideoTime"></video>
  <view class="video-info">
      <scroll-view class="video-title" scroll-y>
          <text>{{name}}</text>
      </scroll-view>
      <text class="video-author">{{username}} · {{createTime}}</text>
  </view>
  <!-- bindscrolltolower="loadMore" -->
  <scroll-view scroll-y="true" style="height: {{scrollHeight}}px" class="list-body">
    <view style="padding:0 10px;" wx:if="{{commentList.length > 0}}">
    <!-- 评论 -->
    <view class="comment-body" wx:for="{{commentList}}" wx:key="index">
        <!-- 评论区 -->
        <view class="comment-master">
          <view class="comment-tou">
            <image src="{{item.avatar}}"></image>
          </view>
          <view class="comment-master-text">
              <view class="comment-header clearfix">
                  <text class="comment-name">{{item.realname}}</text>
                  <text class="comment-timer" bindtap="toVideoPosition" data-time="{{item.media_time}}">{{item.comment_time}}</text>
              </view>
              <view class="comment-body1">
                 <text>{{item.content}} </text>
                 <view class="comment-do clearfix">
                   <text catchtap="toBackPage" data-index="{{item.id}}" data-doc-id="doc_id">回复</text>
                   <!-- <view class="comment-zan clearfix"> -->
                        <!-- <image src="{{zanActive}}" class="comment-zan-img"></image> -->
                        <!-- <text>{{item.replies.length}}</text> -->
                   <!-- </view> -->
                 
                 </view>
              </view>
          </view>
        </view>

        <!-- 回复区 -->
        <view class="comment-back" wx:if="{{item.replies.length > 0}}" catchtap="toBackPage" data-index="{{item.id}}" data-doc-id="doc_id">
            <text class="comment-look-back" wx:if="{{item.replies.length > 1}}">查看{{item.replies.length - 1}}条往期的回复</text>
            <view class="back-body">
                <view class="back-tou">
                    <image src="{{tx}}"></image>
                </view>

                <view class="back-info">
                    <text class="back-name">{{item.replies[item.replies.length - 1].realname}}</text>
                    <text class="back-text">{{item.replies[item.replies.length - 1].content}}</text>
                    <!-- <view class="back-zan"> -->
                        <!-- <image src="{{zan}}" class="comment-zan-img"></image> -->
                        <!-- <text>1</text> -->
                    <!-- </view> -->
                </view>
            </view>
        </view>
    </view>
    <!-- 评论 end -->
      
    </view>

    <view  wx:if="{{commentList.length == 0}}" class="sofa">
        ～暂无评论，抢沙发！！～
      </view>


  </scroll-view>

  <view class="push-comment">
   <form bindsubmit="sendComment">
      <view class="push-comment-input clearfix">
          <textarea placeholder="发表评论..." cursor-spacing="20" bindblur="commentBlur" name="commentText" style="color:#fff"
          bindfocus="commentFocus" animation="{{animationData}}" value="{{commentText}}" fixed="{{true}}"> 
          </textarea>
          <!-- hidden="{{hideSendComment}}" -->
          <button class="send-commit" form-type="submit">
              发送
          </button>
      </view>
    </form>
  </view>

</view>



