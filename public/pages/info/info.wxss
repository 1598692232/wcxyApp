.controls {
    position: relative;
    height: 100%;
    display: flex;
    justify-content:center;
    align-items:center;
}
.controls-body{
    position: relative;
    height:50px;
    display: flex;
    flex:1;
    justify-content:center;
    align-items:center;
}
.play,.pause,.time {
    flex: 1;
    height: 100%;
}
.time {
    text-align: center;
    background-color: rgba(0, 0, 0, .5);
    color: white;
    line-height: 50px;
}
.img {
    width: 40px;
    height: 40px;
    margin: 5px auto;
}

.info-video{ 
    width:100%;
}
.do-block{
    position: absolute;
    left: 0;
    top:0;
    /*background: #f5f5f5;*/
    width: 100%;
    text-align: right;
}
.qp-img{
    display: inline-block;
    margin-top:5px;
    width: 20px;
    height:20px;
    margin-right: 10px;
}
.controls-content{
    display: flex;
    position:absolute;
    justify-content:center;
    align-items:center;
    left: 0; 
    top: 0;
    width: 100%;
    height: 100%;
}
.list-body{
    /*padding: 0 10px ;*/
    box-sizing: border-box;
    /* background: #2a2e3b */
    background: #252525;
}
.comment-body{
    width: 100%;
    box-sizing: border-box;
    padding:0 10px;
}
.comment-master{
    position: relative;
    width:100%;
    box-sizing: border-box;
    padding-left: 30px;
    padding-top: 10px;
}
.comment-tou{
    position: absolute;
    left:0;
    top: 10px;
    width:30px;
    height:30px;
    background: #ddd;
    border-radius: 50%;
    overflow: hidden;
}
.comment-tou image{
    display: inline-block;
    width:100%;
    height: 100%;
}
.comment-master-text{
    /*width: 100%;*/
    margin-left: 10px;
    box-sizing: border-box;
    border-bottom: 1px solid rgba(0,0,0,.2);
    padding-bottom: 10px;
}
.comment-header{
    width: 100%;
}
.comment-header text{
    display: inline-block;
    line-height: 30px;
    font-size:14px;
}
.comment-name{
    float: left;
    color: #6b6b77;
}
.comment-timer {
    float: right;
    padding:0 7px;
    line-height: 20px;
    font-size:14px;
    font-weight: bold;
    background-color: #1125e5;
    border-radius: 3px;
    color: #fff;
}
.comment-body1{
    font-size: 13px;
    line-height: 1.5;
    color: #c6c6d0;
    word-wrap:break-word;
}
.comment-do{
    width: 100%;
    margin-top: 10px;
}
.comment-do > text{
    display: inline-block;
    float: left;
    font-size:13px;
    color: #686872;
    line-height: 1.5;
}
.comment-zan{
    width: 60%;
    float: left;
}
.comment-zan-img{
    float: left;
    width: 15px;
    height: 15px;
    margin-left: 10px;
    margin-top: 1px;
}
.comment-zan text{
    display: inline-block;
    float: left;
    margin-left: 5px;
    color: #686872;
}
.comment-back{
    width: 100%;
    box-sizing: border-box;
    padding-left: 40px;
}
.comment-look-back{
    display:block;
    font-size: 13px;
    color: #666;
    line-height: 40px;
    border-bottom:1px solid rgba(0,0,0,.2);
}
.back-body{
    width: 100%;
    position: relative;
    padding: 10px 0 10px 30px;
    border-bottom:1px solid rgba(0,0,0,.2);
}
.back-tou{
    position: absolute;
    left: 0; 
    top: 10px;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    background:#ddd;
    overflow: hidden;
}
.back-tou image {
    width: 100%;
    height: 100%;
}
.back-info{
    width: 100%;
    box-sizing: border-box;
    padding-left: 5px;
}
.back-name{
    display:block;
    width: 100%;
    font-size: 13px;
    color: #6b6b77;
    line-height: 20px;
}
.back-text{
    display: inline-block;
    width: 100%;
    font-size: 13px;
    color: #666;
    line-height: 20px;
}
.back-zan text{
    font-size:12px;
    line-height: 1.5;
    color: #666;
    margin-left: 5px;
}
.back-zan image{
    margin-left: 0;
    margin-top: 6px
}

.video-info{
    display: flex;
    align-items: center;
    height: 60px;
    padding: 10px 10px 10px 0;
    border-bottom: 1px solid #2c2b3b;
    /* background: #21252d */
    background: #252525;
}
.video-title {
    display: flex;
    float: left;
    width: 50%;
    height: 20px;
    line-height: 20px;
    color: #fff;
    font-size:14px;
    align-items: center;
}
.video-author {
    float: right;
    width: 50%;
    display: block;
    height: 20px;
    line-height: 20px;
    color: #6b6b77;
    font-size:12px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: right
}
.sofa{
    color:#6b6b77;
    font-size: 18px;
    text-align: center;
    line-height:150px;
}
.active-background{
    background: #21252e
}
.comment-del{
    display: flex;
    position: absolute;
    right: -100px;
    top:0;
    height:100%;
    justify-content: center;
    align-items: center;
    width:90px;
    background: #f00;
    color:#fff;
    font-size: 18px;
    text-align: center;
}
.del-transtion{
   transition: all 0.3s linear
}
.select-version-p{
    width: 80px;
    height: 30px;
    position: relative;

}
.select-version-p image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}
.select-version-p text{
    display: inline-block;
    position: relative;
    text-align: center;
    width: 100%;
    color: #fff;
    font-size: 13px;
    line-height: 30px;
    z-index:1;
}
.info-cover{
    position: fixed;
    left: 0;
    top:0;
    width: 100%;
    height: 100%;
    /* background: rgba(0,0,0,0.5); */
    z-index:1000;
}
.info-cover-select{
    position: absolute;
    left: 10px;
    /* top:100px; */
    width: 355px;
    min-height: 100px;
    background: #f5f5f5;
    z-index:1001;
    padding: 10px;
    border-radius: 5px;
    animation: selectAni 0.3s cubic-bezier(0.23, 1, 0.32, 1) 0ms forwards;
}
.select-ani-one {
    transform-origin: 2% -5%;
}
.select-ani-two {
    transform-origin: 30% -5%;
}
@keyframes selectAni{
    0% {
        transform: scale(0)
    }

    100% {
        transform: scale(1)
    }
}
.info-arrow{
    position: absolute;
    /* left: 10px; */
    top: -11px;
    width: 30px;
    height: 30px;
    background: #f5f5f5;
    border-radius: 3px;
    transform: rotate(45deg)
}
.version-p-li{
    border-bottom: 1px solid #e1e1e1;
    padding:5px 0;
    color: #99999a
}
.version-name{
    text-align: center;
    font-size: 15px;
}
.video-name{
    text-align: center;
    font-size: 12px;
}
.video-select-btn-p{
    position: absolute;
    right: 10px;
    bottom: 60px;
    line-height: 30px;
    width: 70px;
    background: rgba(0,0,0,0.5);
    border-radius: 15px;
    text-align: center;
    font-size:12px;
    color: #fff;
    z-index:1
}
.video-select-p-list{
    position: absolute;
    right: -150px;
    top: 0;
    width: 150px;
    height: 100%;
    background: rgba(0,0,0,0.5);
    /* justify-content: center; */
    /* align-items: center; */
    /* flex-direction: column; */
    z-index:1;
    animation: videoSelectAni 0.3s cubic-bezier(0.23, 1, 0.32, 1) 0ms forwards;    
}
.video-select-table{
    position: absolute;
    top:50%;
}

@keyframes videoSelectAni{
    0% {
        transform: translateX(0)
    }

    100% {
        transform: translateX(-150px)
    }
}

.video-select-p-li{
    height: 44px;
    line-height: 44px;
    color:#fff;
    text-align: center;
    width: 150px;
}
.video-cover{
    position:absolute;
    left:0;
    top:0;
    z-index:1;
    width:100%;
    height:100%;
}












