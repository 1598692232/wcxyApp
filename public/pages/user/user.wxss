.user_container{
  background-color:#010101;
}
/**index.wxss**/
.user_pic {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40px auto 20px;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  /* margin: 20rpx; */
  border-radius: 50%;
  /* background: #000; */
  box-sizing: border-box;
  border: 2px solid #1166EA;
}

.userinfo-nickname {
  color: #fff;
  margin-top: 30rpx;
  font-size: 14px;
}

.usermotto {
  margin-top: 200px;
}
.user-control{
  margin-top: 50px; 
  padding: 20px;
  width: 100%;
}
.login-out{
  width: 300px;
  height: 44px;
  background: #0345C7;
  /* border-radius: 100px; */
  border-radius: 6px;
  color: #fff;
  font-size: 17px;
  letter-spacing: 0.86px;
  text-align: center;
}


.user_info_title{
  width: 100%;
  height: 40px;
  background: #171D29;
  line-height: 40px;
  margin: 0 0 20px;
  padding: 0 12px;
}
.account_info{
  display: flex;
  align-items: center;
}
.user_info_title .account_information{
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: 0;
}

.wrap_box{
  display: flex;
  justify-content: space-between;
  margin-bottom:20px;
  padding: 0 12px;
}
.wrap{
  width: 92px;
  height: 118px;
}
.cir{  
  display: inline-block;  
  width: 92px;
  height: 92px;
}  
.top{
  width: 100%;
  height: 100%;
}
.cir2{  
  display: inline-block;  
} 
  
.top{  
  text-align: center  
}  
.cc{  
  margin-top: -70px;  
  text-align: center;
}  
.cc .count{
  font-size: 16px;
  color: #FFFFFF;
  letter-spacing: 0;
}
.cc .bili{
  font-size: 12px;
  color: #9B9B9B;
  letter-spacing: 0;
}
.canvas_title{
  font-size: 14px;
  color: #9B9B9B;
  letter-spacing: 0;
  text-align: center;
  margin-top: 32px;
}


.user_info_title .remaining_time{
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: 0;
}
.user_info_title .time{
  font-size: 14px;
  color: #9B9B9B;
  letter-spacing: 0;
  float: right;
}

.remainingTime{
  margin-bottom: 20px!important;
}
/* 新功能红点 */
.collection{
  position: relative;
  margin-bottom: 10px!important;
}
.red_dot{
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: red;
  position: absolute;
  left: 50px;
  top: 10px;
}
.list_icon{
  width: 16px;
  height: 100%;
  float: right;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list_icon image{
  width: 16px;
  height: 16px;
}

/* 用户等级 */
.user_Level{
  width: 72px;
  height: 24px;
  background: #0345C7;
  border-radius: 100px;
  margin-left: 4px;
  font-size: 12px;
  color: #FFFFFF;
  line-height: 24px;
  text-align: center;
}