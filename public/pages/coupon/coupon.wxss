.coupon{
    width: 100%;
    height: auto;
    box-sizing: border-box;
    background: rgb(47, 93, 217);
}
.coupon-top{
    width: 100%;
    height: 620rpx;
    position: relative;
}
.coupon-top .pic{
    display: block;
    width: 100%;
    height: 100%;
}
.top-text{
    width: 572rpx;
    height: 165rpx;
    position: absolute;
    left: 0;right: 0;
    top: 328rpx;
    margin: auto;
    display: flex;
}
.top-text .left{
    width: 198rpx;
    text-align: center;
    line-height: 165rpx;
    font-size: 47rpx;
    color: #F84B30;
    font-weight: 600;
}
.top-text .left .money{
    font-size: 24rpx;
    font-weight: 400;
}
.top-text .right{
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.top-text .right .text{
    color: #F84B30;
}
.top-text .right .text1{
    font-size: 40rpx;
    line-height: 57rpx;
    letter-spacing: 2rpx;
}
.top-text .right .text2{
    font-size: 25rpx;
    line-height: 36rpx;
    letter-spacing: 1.27rpx;
    margin-top: 7rpx;
}


.receive{
    width: 364rpx;
    height: 88rpx;
    background: #F5A623;
    border-radius: 100rpx;
    position: absolute;
    left: 0;right: 0;
    margin: auto;
    bottom: 0;

    font-size: 34rpx;
    line-height: 88rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
}


.get-more{
    font-size: 24rpx;
    line-height: 33rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    margin-top: 20rpx;
}

.module{
    width: 670rpx;
    background: #FFFFFF;
    border-radius: 10rpx;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 50rpx 30rpx;
    margin-top: 60rpx;
}
.module .title{
    line-height: 48rpx;
    font-size: 34rpx;
    color: #4A4A4A;
    letter-spacing: 0;
    text-align: center;
    display: flex;
    justify-content: center;
}
.module .title .text{
    padding: 0 10rpx;
}
.module .title .icon{
    width: 88rpx;
    display: flex;
    height: 48rpx;
    justify-content: center;
    align-items: center;
}
.module .title .icon .line{
    width: 70rpx;
    height: 2rpx;
    background: #4A90E2;
}
.module .title .icon .circle{
    width: 7rpx;
    height: 7rpx;
    background: #4A90E2;
    border-radius: 50%;
}

.module .content{
    font-size: 26rpx;
    color: #4A4A4A;
    letter-spacing: 0.11rpx;
    text-align: center;
    line-height: 39rpx;
    margin-top: 40rpx;
}

.share{
    width: 440rpx;
    height: 88rpx;
    margin: 60rpx auto 0;
    text-align: center;
}
.share button{
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
    font-size: 34rpx;
    line-height: 88rpx;
    background: #F84B30;
    /* color: #4A4A4A; */
    color: #FFFFFF;
}


.count-box{
    font-size: 24rpx;
    color: #4A4A4A;
    letter-spacing: 0;
    text-align: center;
    line-height: 33rpx;
    margin-bottom: 40rpx;
}
.count-box .count-pic{
    width: 92rpx;
    height: 92rpx;
    margin: 40rpx auto 10rpx;
}
.count-box .count-pic image{
    display: block;
    width: 100%;
    height: 100%;
}

.list-box{
    max-height: 435rpx;
    overflow: auto;
}
.list{
    height: 45rpx;
    margin-bottom: 33rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.list .left{
    display: flex;
}
.list .avatar{
    width: 45rpx;
    height: 45rpx;
    border-radius: 50%;
    overflow: hidden;
}
.list .avatar image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: #F5A623;
}
.list .info{
    font-size: 24rpx;
    line-height: 45rpx;
    color: #000000;
    letter-spacing: 0;
    margin-left: 15rpx;
}
.list .info text{
    color: #F5A623;
}

.list .time{
    font-size: 24rpx;
    color: #9B9B9B;
}

.total{
    text-align: right;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #4A4A4A;
    padding-top: 37rpx;
}
.total .money{
    font-size: 48rpx;
    color: #F5A623; 
    margin-left: 10rpx;
}
.total .money text{
    font-size: 24rpx;
}


.use{
    width: 440rpx;
    height: 88rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
    margin: 60rpx auto 0;

    font-size: 34rpx;
    line-height: 88rpx;
    color: #4A4A4A;
    letter-spacing: 0;
    text-align: center;
}

.back{
    width: 440rpx;
    height: 88rpx;
    background: #1A3BDF;
    border-radius: 8rpx;
    margin: 30rpx auto 0;

    font-size: 34rpx;
    line-height: 88rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
}

.content2{
    text-align: justify!important;
}

.tips{
    padding: 50rpx 40rpx;
    color: #bfbfbf;
    font-size: 24rpx;
}