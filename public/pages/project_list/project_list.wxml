<view class="pl-container">
	<scroll-view class="pl-list" scroll-y style="height: {{scrollHeight}}px" bindscrolltolower="loadMore" lower-threshold="100">
		<view class="pl-body">
			<view class="pl-li" wx:for="{{videoList}}" wx:key="index" style="width:{{liWidth}}px;margin-right:{{(index + 1) % 2 == 0 ? 0 : '10px'}};" bindtap="toInfo" data-url="{{item.project_file.url}}" data-name="{{item.name}}">
				<view class="pl-img-body pl-show-count">

					 <view class="pl-count">
					 	<text>{{item.version_count}}</text>
					 </view>
					 <view class="pl-timer">
					 	<text>04:39</text>
					 </view>

					<image class="pl-img" src="{{item.cover_img[0]}}" mode="aspectFit" lazy-load="{{true}}"></image>
				</view>
				
				<view class="pl-des-body">
					<text class="pl-name">{{item.name}}</text>
					<view class="pl-user clearfix">
						<image class="pl-user-tou" src="{{manager}}" mode="aspectFit" lazy-load="{{true}}"></image>
						<image class="pl-video-icon" src="{{sx}}" mode="aspectFit" lazy-load="{{true}}"></image>
						<text class="pl-create-timer">{{item.project_file.time}}天前</text>
					</view>
				</view>
			</view>
			
		</view>
		
	</scroll-view>
</view>


