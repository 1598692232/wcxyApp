.pl-container{
	width: 100%;
}

.pl-list{
	width: 100%;
	box-sizing:border-box;
	/* background: #454b5c; */
	background: #000
}
.pl-body{
	width:100%;
}
.pl-li{
	width: 100%;
	/*height: 343rpx;*/
	/*background: #f2f2f2;*/
	margin-right: 10px;
	margin-bottom: 10px;
	padding: 10px;
	overflow: hidden;
	border-bottom: 5px solid #343545;
}
.pl-img-body{
	position: relative;
	float: left;
	width:130px;
	height:100px;
	/* background: #21212d; */
	background: #252525;
}
.pl-show-count:before{
	content: "";
	display: block;
	width: 80px;
	height: 80px;
	background: #000;
	position: absolute;
	right: -51px;
	top:-41px;
	transform: rotate(45deg);
}
.pl-count{
	position: absolute;
	right: 10px;
	top:2px;
	display: inline-block;
	color:#fff;
	line-height: 25px;
	font-size:13px;
}
.pl-timer{
	display: inline-block;
	padding: 0 10px;
	line-height: 20px;
	position: absolute;
	right: 5px;
	bottom: 5px;
	background: rgba(0,0,0, 0.5);
	border-radius: 10px;
	font-size:20rpx;
	color:#fff;
}
.pl-img{
	width: 100%;
	height: 100%;
}
.pl-des-body{
	float: right;
	padding: 0 10px;
	/* height: 123rpx; */
	/* background-color: #21212d; */
}
.pl-name{
	display: inline-block;
	box-sizing: border-box;
	width: 100%;
	font-size: 15px;
	color:#666;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	color: #fff;
	line-height: 20px;
	margin-top: 5px;
}

.pl-user{
	width: 100%;
	margin-top: 30rpx;
}

.pl-user-tou{
	float: left;
	width:40rpx;
	height: 40rpx;
	border-radius: 50%
}
.pl-text{
	margin-top: 20rpx;
}

.pl-text-p{
	display: inline-block;
	margin-right: 10px; 
	float: left;
	font-size: 12px;
	color: #dbdbdb;
	line-height:1;	
}

.pl-video-icon{
	float: left;
	margin-right: 5px;
	width: 25rpx;
	height: 25rpx;
}

.pl-create-timer{
	display: inline-block;
	margin-left: 5px;
	float: left;
	line-height: 40rpx;
	color:#6c6b7b;
	font-size: 12px
}

