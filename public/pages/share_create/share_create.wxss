.create-share-list-box{
    width: 100%;
    overflow-x: hidden;
    background: #383B4A;
}
.create-share-list-top{
    display: flex;
    width: 200%;
    height: 100px;
    padding-top: 10px;
    padding: 10px 10px 0;
    flex-wrap: nowrap
}
.create-share-list-top2{
    width: auto;
    height: 168px;
    padding: 27px 22px 0;
    display: flex;
}
.create-share-list{
    /* float: left; */
    width: 90px;
    height: 100%;
    margin-right: 10px;
}
.create-share-list .share-pic{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 60px;
    border-radius: 4px;
    background: #30343f;
    box-shadow:0px 0px 10px 1px rgba(0,0,0,0.6);
    margin-bottom: 4px;
    overflow: hidden;
}
.share-pic image{
    height: 100%;
    width: 100%;
}
.create-share-list .share-name{
    width: 100%;
    height: 22px;
    padding: 0 4px;
    line-height: 22px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    background: #222431;
    border-radius: 3px;
    font-size: 9px;
    color: #FFFFFF;
    box-shadow:0px 0px 10px 1px rgba(0,0,0,0.6);
}

/* 分享的选择 */
.group{
    width: 100%;
    height: auto;
    background: #383B4A;
}
.row{
    width: 100%;
    height: 58px;
}
.btn{
    border-top: 1px solid #2F3344;    
}
.row-wrapper{
    width: 100%;
    padding: 0 18px;
    height: 58px;
    display: flex;
    justify-content: space-between;
}
.row-wrapper .left{
    display: flex;
    height: 100%;
    align-items: center;
    font-size: 14px;
    color: #FFFFFF;
    letter-spacing: 0.62px;
}
.row-wrapper .right{
    /* margin-top: 12px; */
    display: flex;
    justify-content: center;
    align-items: center;
    width: 47px;
    height: 100%;
}
.row-wrapper .right switch{
    /* width: 47px;
    height: 28px; */
}
.link-name .left{
    font-size: 14px;
    color: rgba(255,255,255,0.27);
    letter-spacing: 0.62px;
}
.link-name .right image{
    width: 25px;
    height: 25px;
}

/*swtich整体大小*/
.wx-switch-input{
    width:94rpx !important;
    height:56rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:92rpx !important;
    height: 52rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 46rpx !important;
    height: 52rpx !important;
}
/* 时间选择器 */
.row-picker{
    width: 100%;
    height: 58px;
    margin-bottom: 50px;
}
.row-picker picker{
    width: 100%;
    height: 58px;
    color: rgba(255,255,255,0.27);
    line-height: 58px;
    padding: 0 18px;
    font-size: 16px;
}



/* 底部取消保存 */
.bottom-btn{
    width: 100%;
    height: 50px;
    background: #0345C7;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    font-size: 15px;
    color: #FFFFFF;
    line-height: 50px;
    padding: 0 22px;
}

.create-share-header{
    text-align: center;
    font-size: 13px;
    padding-top: 15px;
    color: #e1e1e1;
    z-index:0;
}
.create-share-header text{
    color: #fff;
}

.share-file-icon{
    width: 30px;
    height: 30px;
}

.create-share-ext{
	position: relative;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 30px;
	height: 30px;
	color: #fff;
	font-size: 12px;
	color: #fff;
}

.create-share-ext image {
	position: absolute;
	left: 50%;
	top: 50%;
	margin-top: -15px;
	margin-left: -15px;
	width: 30px;
	z-index: 0;
}
.create-share-ext text{
	position: relative;
    z-index: 1;
    font-size: 12px;
}