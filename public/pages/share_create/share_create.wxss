.create-share-list-box{
    width: 100%;
    overflow-x: hidden;
    background: #383B4A;
}
.create-share-list-top{
    width: 100%;
    height: 168px;
    padding: 27px 22px 0;
    display: flex;
    justify-content: center;
}
.create-share-list-top2{
    width: auto;
    height: 168px;
    padding: 27px 22px 0;
    display: flex;
}
.create-share-list{
    width: 120px;
    height: 124px;
    /* margin-left: -40px; */
}
.create-share-list .share-pic{
    width: 120px;
    height: 92px;
    border-radius: 4px;
    background: #0345C7;
    box-shadow:3px 0px 4px rgba(0,0,0,0.6);
    margin-bottom: 4px;
}
.create-share-list .share-name{
    width: 120px;
    height: 28px;
    padding: 4px;
    background: #222431;
    border-radius: 7px;
    font-size: 9px;
    color: #FFFFFF;
    line-height: 10px;
    box-shadow:3px 0px 4px rgba(0,0,0,0.6);
}

/* 分享的选择 */
.group{
    width: 100%;
    height: auto;
    background: #383B4A;
}
.row{
    width: 100%;
    height: 58px;
}
.btn{
    border-top: 2px solid #2F3344;    
}
.row-wrapper{
    width: 100%;
    padding: 0 18px;
    height: 58px;
    display: flex;
    justify-content: space-between;
}
.row-wrapper .left{
    font-size: 16px;
    color: #FFFFFF;
    letter-spacing: 0.62px;
    line-height: 58px;
}
.row-wrapper .right{
    margin-top: 12px;
}
.row-wrapper .right switch{
    width: 47px;
    height: 28px;
}
.link-name .left{
    font-size: 16px;
    color: rgba(255,255,255,0.27);
    letter-spacing: 0.62px;
    margin-top: 12px;
}
.link-name .right image{
    width: 25px;
    height: 25px;
    margin-right: 14px;
}

/*swtich整体大小*/
.wx-switch-input{
    width:94rpx !important;
    height:56rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:92rpx !important;
    height: 52rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
    width: 46rpx !important;
    height: 52rpx !important;
}
/* 时间选择器 */
.row-picker{
    width: 100%;
    height: 58px;
    margin-bottom: 50px;
}
.row-picker picker{
    width: 100%;
    height: 58px;
    color: rgba(255,255,255,0.27);
    line-height: 58px;
    padding: 0 18px;
    font-size: 16px;
}



/* 底部取消保存 */
.bottom-btn{
    width: 100%;
    height: 50px;
    background: #0345C7;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    font-size: 15px;
    color: #FFFFFF;
    line-height: 50px;
    padding: 0 22px;
}