    <scroll-view scroll-x>
        <view class="create-share-list-top" style="width: {{(createShareList.length * 100 + 10)}}px">
            <view class="create-share-list" wx:for="{{createShareList}}" wx:key="index">
                <view class="share-pic">
                    <block wx:if="{{item.cover_img.length > 0}}">
                        <image src="{{item.cover_img[0]}}" ></image>
                    </block>
                    <block wx:if="{{item.file_type == 'audio'}}">
                        <view class="share-file-icon">
                            <image src="./img/mp3.png"  mode="aspectFit"></image>
                        </view>
                    </block>
                    <block wx:else>
                        <view class="share-file-icon"  wx:if="{{item.ext == 'zip' || item.ext == 'rar' || item.ext == 'dmg'}}">
                            <image src="./img/compress.png"  mode="aspectFit"></image>
                        </view>
                        <block wx:else>
                            <view class="create-share-ext" wx:if="{{item.cover_img.length == 0}}">
                                <image  src="./img/file.png"  mode="aspectFit" ></image>
                                <text>{{item.ext}}</text>
                            </view>
                        </block>
                    </block>
          
                </view>
                <view class="share-name">
                   {{item.name}}
                </view>
            </view>
        </view>
    </scroll-view>

    <view class="group">
        <view class="group-content">
            <view class="row link-name">
                <view class="row-wrapper">
                    <view class="left">
                        <input type="text" placeholder="请输入分享标题" bindinput="bindKeyInput" focus="{{focus}}"/>
                    </view>
                    <view class="right" bindtap="bindButtonTap">
                        <image src="./img/pen.png"></image>
                    </view>
                </view>
            </view>
            <view class="row btn">
                <view class="row-wrapper">
                    <view class="left">
                        <text>允许审阅</text>
                    </view>
                    <view class="right">
                        <switch bindchange="switch1Change" color="#00CC96" checked="{{allowApproval}}"/>                        
                    </view>
                </view>
            </view>
            <view class="row btn">
                <view class="row-wrapper">
                    <view class="left">
                        <text>显示所有版本</text>
                    </view>
                    <view class="right">
                        <switch bindchange="switch2Change" color="#00CC96" checked="{{showAllVersions}}"/>                        
                    </view>
                </view>
            </view>
            <view class="row btn">
                <view class="row-wrapper">
                    <view class="left">
                        <text>允许下载</text>
                    </view>
                    <view class="right">
                        <switch bindchange="switch3Change" color="#00CC96" checked="{{enableDownloading}}"/>                        
                    </view>
                </view>
            </view>
            <view class="row btn">
                <view class="row-wrapper">
                    <view class="left">
                        <text>密码</text>
                    </view>
                    <view class="right">
                        <switch bindchange="switch4Change" color="#00CC96" checked="{{requirePassword}}"/>                        
                    </view>
                </view>
            </view>
            <view class="row btn">
                <view class="row-wrapper">
                    <view class="left">
                        <text>有效期</text>
                    </view>
                    <view class="right">
                        <switch bindchange="switch1ChangeTime" color="#00CC96"/>                        
                    </view>
                </view>
            </view>
            <view wx:if="{{deadline}}">
                <view class="row-picker">
                    <picker mode="multiSelector" value="{{dateTime1}}" bindchange="changeDateTime1" bindcolumnchange="changeDateTimeColumn1" range="{{dateTimeArray1}}">
                        <view class="tui-picker-detail">
                            设置过期时间: {{dateTimeArray1[0][dateTime1[0]]}}-{{dateTimeArray1[1][dateTime1[1]]}}-{{dateTimeArray1[2][dateTime1[2]]}} {{dateTimeArray1[3][dateTime1[3]]}}:{{dateTimeArray1[4][dateTime1[4]]}}
                        </view>
                    </picker>
                </view>
            </view>
        </view>
    </view>

    <view class="bottom-btn">
        <view bindtap="toCloseShareList">上一步</view>
        <view bindtap="toShareListView">保存</view>
    </view>
</view>