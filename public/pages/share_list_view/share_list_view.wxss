.shareListView{
    width: 100%;
    height: 100%;
    background: #383B4A;
}
.share-list-view-info{
    width: 100%;
    height: auto;
    background: #383B4A;
}
.share-list-top{
    display: flex;
    padding: 14px;
}
.wx-logo{
    width: 65px;
    width: 71px;
    height: 65px;
    background: #fff;
    border-radius: 50%;
    overflow: hidden;
}
.wx-logo image{
    width: 65px;
    height: 65px;
}
.list-info{
    flex-grow: 1;
    margin-left: 20px;
    margin-bottom: 4px;
    font-size: 15px;
    color: #FFFFFF;
}
.share-list-name{
    font-size: 15px;
    color: #FFFFFF;
}
.share-list-info{
    font-size: 12px;
    color: #9B9B9B;
}
.share-list-info view{
    width: 50%;
    height: 17px;
    line-height: 17px;
    float: left;
    margin-top: 4px;
}
.share-list-copyBtn{
    width: 249px;
    height: 33px;
    background: #0345C7;
    border-radius: 4px;
    color: #fff;
    line-height: 33px;
    text-align: center;
    margin: 22px auto 0;
    font-size: 12px;
}
.share-list-copyBtn image{
    width: 12px;
    height: 12px;
    margin:0px 3px -1px;
}
/* 列表 */
.share-list-view-video{
    /* padding-top: 22px; */
    width: 100%;
    height: auto;
    background: #383B4A;
}
.share-list-video{
    width: 100%;
    height: auto;
    padding-bottom: 12px;
}
.share-list-video .name{
    font-size: 14px;
    color: #9B9B9B;
    line-height: 20px;
    padding: 22px 8px 8px;
}
.share-list-video video{
    width: 100%;
    height: 210px;
    background: #383B4A;
}
.share-list-video .info{
    width: 100%;
    height: 23px;
    line-height: 23px;
    font-size: 12px;
    color: #9B9B9B;
    padding: 0 16px;
    display: flex;
    justify-content: space-between;
}
.share-list-video .info .avatar image{
    width: 15px;
    height: 15px;
    background: #fff;
    border-radius: 50%;
    margin:0px 2px -2px;
}
.share-list-video .info .comment image{
    width: 12px;
    height: 12px;
    margin:0px 2px -2px;
}
