.call-back{
    /* background: #2a2e3b; */
    background: #010101;
}
.list-body{
    box-sizing: border-box;
}
.comment-body{
    width: 100%;
    box-sizing: border-box;
    padding-top:10px;
}
.comment-master{
    position: relative;
    width:100%;
    box-sizing: border-box;
    padding-left: 30px ;
}
.comment-tou{
    position: absolute;
    left:0;
    top: 0;
    width:30px;
    height:30px;
    background: #ddd;
    border-radius: 50%;
    overflow: hidden;
}
.comment-tou image{
    display: inline-block;
    width:100%;
    height: 100%;
}
.comment-master-text{
    margin-left: 10px;
    box-sizing: border-box;
    /* border-bottom:1px solid #14161a; */
    padding-bottom: 10px;
}
.comment-header{
    width: 100%;
}
.comment-header text{
    display: inline-block;
    line-height: 30px;
    font-size:14px;
}
.comment-name{
    float: left;
    color: #6b6b77;
}
.comment-timer {
    padding:0 7px;
    line-height: 20px;
    font-size:14px;
    font-weight: bold;
    background-color: #535353;
    border-radius: 3px;
    color: #fff;
    position:absolute;
    top:0;
    right:0;
}
.comment-body1{
    font-size: 14px;
    line-height: 1.5;
    color: #fff;
    word-wrap: break-word;
}
.comment-do{
    width: 100%;
    margin-top: 10px;
}
.comment-do > text{
    display: inline-block;
    float: left;
    font-size:13px;
    color: #686872;
    line-height: 1.5;
}
.comment-zan{
    width: 60%;
    float: left;
}
.comment-zan-img{
    float: left;
    width: 15px;
    height: 15px;
    margin-left: 10px;
    margin-top: 1px;
}
.comment-zan text{
    display: inline-block;
    float: left;
    margin-left: 5px;
}
.comment-back{
    width: 100%;
    box-sizing: border-box;
    padding-left: 40px;
}
.comment-look-back{
    display:block;
    font-size: 13px;
    color: #666;
    line-height: 40px;
    border-bottom:1px solid #f2f2f2;
}
.back-body{
    width: 100%;
    position: relative;
    padding : 10px 0 10px 30px;
    border-top: 1px solid #14161a;
    /* border-bottom:1px solid rgba(0,0,0,.2); */
}
.back-tou{
    position: absolute;
    left: 0; 
    top: 10px;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    background:#ddd;
    overflow: hidden;
}
.back-tou image {
    width: 100%;
    height: 100%;
}
.back-info{
    width: 100%;
    box-sizing: border-box;
    padding-left: 5px;
}
.back-name{
    display: block;
    width: 100%;
    font-size: 13px;
    color: #6b6b77;
    line-height: 20px;
}
.back-text{
    display: inline-block;
    width: 100%;
    font-size: 13px;
    color: #fff;
    line-height: 20px;
}
.back-zan text{
    font-size:12px;
    line-height: 1.5;
    color: #666;
    margin-left: 5px;
}
.back-zan image{
    margin-left: 0;
    margin-top: 6px
}
.comment-del{
    position: absolute;
    right: -100px;
    top:0;
    line-height:67px;
    width:90px;
    background: #f00;
    color:#fff;
    font-size: 18px;
    text-align: center;
}
.del-transtion{
   transition: all 0.3s linear
}

.callback-comment{
    background: #171d29;
}

.push-comment-input input{
    padding: 0 10px;
}

.push-comment {
    position: relative;
    padding-left: 55px;
}

.toggle-comment-type{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    width: 44px;
    height: 44px;
    border-radius: 3px;
    background: #2d303e;
    top: 5px;
    left:5px;
}

.toggle-comment-type image{
    width: 50rpx;
    height: 50rpx;
}

.info-footer-comment-btn-body{
    position: relative;
    height:44px;
    width: 100%;
    background: #292A2F;
    padding-left: 12px;
    border-radius: 22px;
    box-sizing: border-box;
}

.comment-record{
    display: flex;
    align-items: center;
    height: 30px;
    width: 100%;
    max-width: 400rpx;
    margin-top: 20rpx;
}

.comment-record-body{
    display: flex;
    align-items: center;
    padding-right: 10rpx;
    height: 100%;
    max-width: 100%;
    padding-left: 10rpx;
    background: #0345C7;
    /* background: #fff; */
    border-radius: 15px;
}

.comment-record text{
    color:#fff;
    font-size: 26rpx;
    margin-left: 10rpx;
}

.comment-record image{
    position: relative;
    top:0;
    width: 30rpx;
    height: 30rpx;
}

.record-comment{
    width: 100%;
    display: flex;
    width: 100%;
    justify-content: center;
    align-items: center;
    color: #fff;
    height: 44px;
    background:#2d303e;
    border-radius:3px;
    font-size:26rpx;
}

.record-wrap-fix{
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 300rpx;
    height: 300rpx;
    left: 50%;
    top:50%;
    margin-top: -150rpx;
    margin-left: -150rpx;
    z-index: 100;
    background: rgba(0,0,0,0.5);
    border-radius: 10rpx;
}

.record-wrap-fix image{
    width: 85px;
    height: 85px;
}

.record-wrap-text{
    color: #fff;
    margin-top: 10rpx;
    font-size: 26rpx;
}










