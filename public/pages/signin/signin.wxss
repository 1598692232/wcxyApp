.logo{
	height: 30px;
	display: flex;
	justify-content: center;
	margin: 96px 0 20px;
}
.logo image{
	width:253px;
	height:29px;
}
.title{
	text-align: center;
	color:#979797;
	letter-spacing: 3.6px;
}
.title text{
	font-size: 18px;
	color: #D9D9D9;
	letter-spacing: 3.6px;
}



.login-input{
	line-height: 44px;
	height: 44px;
	font-size: 13px;
	color: #666;
}
.login-btn{
	width: 100%;
	margin-top: 25px;
	border-radius: 0;
	color: #fff;
	background: #0345C7;
	border-radius: 6px;
	font-size: 17px;
	letter-spacing: 0.86px;
}
.login-form{
	background: #010101;
	/*display: block;*/
	/*padding-top:20px;*/
}
.login-form form {
	display: block;
	padding: 43px 28px 0;
}
.login-input-body{
	height: 44px;
	width: 100%;
	padding:0 28px;
	position: relative;
	margin-bottom: 15px;
	background: #282E3A;
	border-radius: 6px;
}
.login-input-icon{
	position: absolute;
	left:12px;
	top: 12px;
	width: 18px;
	height: 18px;
}
.login-input-clear {
	position: absolute;
	right:5px;
	top: 12px;
	width: 20px;
	height: 20px;
}
.login-input-body input{
	position: absolute;
	left:40px;
	top: 0px;
	font-size: 12px;
	color: #A6A7AD;
	letter-spacing: 0.86px;
}

.forget-text{
	width: 100px;
	float: right;
	text-align: right;
	/* color:#538ac0; */
	color: #fff;
	margin-top: 10px;
	font-size:12px;
