.logo{
	height: 138px;
	display: flex;
	flex: 1;
	align-items: center;
	justify-content: center;
	background: #5b53ff;
}
.logo image{
	display: flex;
	width:60%;
	/*height: 200px;*/
}
.login-input{
	line-height: 44px;
	height: 44px;
	font-size: 13px;
	color: #666;
}
.login-btn{
	width: 100%;
	margin-top: 20px;
	border-radius: 0;
	background-color: #5b53ff;
	color: #fff;
	position:fixed;
	bottom:0;
	left:0;
}
.login-form{
	background: #2c3243;
	/*display: block;*/
	/*padding-top:20px;*/
}
.login-input-body{
	height: 44px;
	width: 100%;
	padding:0 30px;
	position: relative;
	background-color:#21212d;
	margin-bottom: 20px;
}
.login-input-icon{
	position: absolute;
	left:5px;
	top: 12px;
	width: 20px;
	height: 20px;
}
.login-input-clear {
	position: absolute;
	right:5px;
	top: 12px;
	width: 20px;
	height: 20px;
}
